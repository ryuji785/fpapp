<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="app.fp.infrastructure.mapper.CategoryMapper">
  <resultMap id="CategoryResult" type="app.fp.domain.category.Category">
    <id column="id" property="id"/>
    <result column="type" property="type" jdbcType="VARCHAR"/>
    <result column="name" property="name"/>
    <result column="parent_type" property="parentType" jdbcType="VARCHAR"/>
  </resultMap>

  <select id="findByParentType" resultMap="CategoryResult">
    SELECT * FROM categories WHERE parent_type = #{type}
  </select>
</mapper>
